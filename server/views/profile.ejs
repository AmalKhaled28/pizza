      <div style="background-color: antiquewhite; margin-top: 70px;" > 
<section class="order" id="order">

    <h1 class="heading" style="margin-top: 120px; text-align: center; font-size: 35px;">PROFILE</h1>
 
    <form action="/api/pizza/updateProfile" method="post">
 
        <input type="hidden" name="id" value="<%= user.id %>">
        <div class="flex">
            <div class="inputBox">
                <span>your name :</span>
                <input type="text" name="name" class="box" required placeholder="enter your name" maxlength="20" value="<%= user.name %>">
            </div>
            <div class="inputBox">
                <span>your phone :</span>
                <input type="number" name="phone" class="box"  placeholder="enter your number" min="0" value="<%= user.phone %>">
            </div>
            <div class="inputBox">
                <span>zip code :</span>
                <input type="number" name="zip_code" class="box"  placeholder="e.g. 123456" min="0" value="<%= user.zipcode %>">
            </div>
            <div class="inputBox">
                <span>address :</span>
                <input type="text" name="address" class="box"  placeholder="e.g. flat no." maxlength="50" value="<%= user.address %>">
        </div> 
       </div>
 
       <input type="submit" value="Save" class="MenuButton" name="order" >
 
    </form>
 
 </section>
